<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Campus Dashboard</title>
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark px-4 shadow-sm">
        <span class="navbar-brand fw-bold">ðŸŽ“ Campus Event Tracker</span>
        <div class="text-white">
            <span class="me-3">Welcome, <strong><%= user.name %></strong></span>
            <a href="/logout" class="btn btn-outline-danger btn-sm">Logout</a>
        </div>
    </nav>

    <div class="container mt-4">
        <% if (user.role === 'admin') { %>
            <div class="card p-4 border-0 shadow-sm mb-5" style="border-radius: 15px;">
                <h4 class="text-primary">Faculty Tools: Post New Event</h4>
                <form action="/add-event" method="POST" class="row g-3">
                    <div class="col-md-6"><input type="text" name="title" class="form-control" placeholder="Event Name" required></div>
                    <div class="col-md-6"><input type="date" name="date" class="form-control" required></div>
                    <div class="col-12"><textarea name="description" class="form-control" placeholder="Describe the event..."></textarea></div>
                    <div class="col-12"><button class="btn btn-primary px-5">Add Event</button></div>
                </form>
            </div>
        <% } %>

        <h3 class="mb-4">Live Events</h3>
        <div class="row">
            <% events.forEach(event => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm" style="border-radius: 12px;">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title text-dark fw-bold"><%= event.title %></h5>
                                <span class="badge bg-info text-dark"><%= event.date %></span>
                            </div>
                            <p class="text-muted small mt-2"><%= event.description %></p>
                            <hr>
                            
                            <% if (user.role === 'student') { %>
                                <div class="mt-auto">
                                    <% if (event.attendees && event.attendees.includes(user.email)) { %>
                                        <button class="btn btn-secondary w-100 disabled">Joined Successfully âœ…</button>
                                    <% } else { %>
                                        <form action="/join-event/<%= event.id %>" method="POST">
                                            <button class="btn btn-outline-primary w-100">Mark Attendance</button>
                                        </form>
                                    <% } %>
                                </div>
                            <% } else { %>
                                <div class="mt-auto">
                                    <h6>Attendees (<%= event.attendees ? event.attendees.length : 0 %>):</h6>
                                    <div class="small text-muted mb-3" style="max-height: 60px; overflow-y: auto;">
                                        <%= event.attendees && event.attendees.length > 0 ? event.attendees.join(', ') : 'No one yet' %>
                                    </div>
                                    <form action="/delete-event/<%= event.id %>" method="POST" onsubmit="return confirm('Remove this event?')">
                                        <button class="btn btn-danger btn-sm w-100">Remove Event</button>
                                    </form>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>